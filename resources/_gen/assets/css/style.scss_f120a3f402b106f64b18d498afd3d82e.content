.right-sidebar-grid {
  padding: none;
  background-color: #FCF8F2;
  font-family: "IBM Plex Sans", sans-serif;
  font-weight: 400;
  font-style: normal;
  display: grid;
  grid-template-areas: 'header' 'main-content' 'right-sidebar' 'footer'; }

.right-sidebar-grid {
  background-color: #FEFBF6; }

/* general column padding */
.right-sidebar-grid > .main-content, .right-sidebar {
  padding: 1rem; }

/* assign columns to grid areas */
.right-sidebar-grid > .header {
  grid-area: header; }

.right-sidebar-grid > .main-content {
  grid-area: main-content; }

.right-sidebar-grid > .right-sidebar {
  grid-area: right-sidebar;
  background-image: radial-gradient(circle at center center, rgba(33, 33, 33, 0), #212121), repeating-linear-gradient(135deg, #212121 0px, #212121 1px, transparent 1px, transparent 4px), repeating-linear-gradient(45deg, #383838 0px, #383838 5px, transparent 5px, transparent 6px), linear-gradient(90deg, #212121, #212121);
  color: #FCF8F2; }

.right-sidebar-grid > .footer {
  color: #FCF8F2;
  background-image: radial-gradient(circle at center center, rgba(33, 33, 33, 0), #212121), repeating-linear-gradient(135deg, #212121 0px, #212121 1px, transparent 1px, transparent 4px), repeating-linear-gradient(45deg, #383838 0px, #383838 5px, transparent 5px, transparent 6px), linear-gradient(90deg, #212121, #212121);
  grid-area: footer; }

/* tablet breakpoint */
@media (min-width: 768px) {
  .right-sidebar-grid {
    grid-template-columns: repeat(3, 1fr);
    grid-template-areas: 'header header header' 'main-content main-content right-sidebar' 'footer footer footer'; } }

.hr {
  border-top: 4px solid #BEADFA; }

@media (min-width: 768px) {
  .hr {
    background-color: none;
    border-top: none; } }
